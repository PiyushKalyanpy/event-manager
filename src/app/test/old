  <div className="items-center flex justify-center flex-col">
                {/* Button to start scanning */}
                <Button onClick={handleClick}>Start Scanning</Button>

                {/* Permission prompt */}
                {!state.hasPermission && !state.permissionRequested && (
                    <div>
                        <p>Please grant camera access to start scanning.</p>
                        <Button onClick={requestCameraPermission}>
                            Grant Camera Access
                        </Button>
                    </div>
                )}

                {/* Video stream */}
                {state.scanning && state.hasPermission && (
                    <div>
                        <video
                            ref={videoRef}
                            width="100%"
                            height="auto"
                            style={{ border: '1px solid black' }}
                            autoPlay
                            muted
                        />
                    </div>
                )}

                {/* Scanning error */}
                {state.scanning && !state.hasPermission && (
                    <div>
                        <p>Please grant camera access to start scanning.</p>
                    </div>
                )}

                {/* Scanned result */}
                {state.result && (
                    <div>
                        <h3>Scanned Result:</h3>
                        <p>{state.result}</p>
                    </div>
                )}
            </div>